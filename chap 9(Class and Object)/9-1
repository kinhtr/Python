# -*- coding: cp1252 -*-

class Player:
	teamcolor = "Red"
	points = 0
	# methods for setting value for player if attributes are private
	#def setcolor(self, color = "no color"):
	#	self.teamcolor = color
	#def setpoints(self, points = 0):
	#	self.points = points
def main():
	player1 = Player()
	# the value of object's attribute can be directly modified because the attributes are not private
	player1.teamcolor = "Blue"
	player1.points = 300
	print("The",player1.teamcolor,"contender has",player1.points,"points!")
	
if __name__ == "__main__":
    main()
