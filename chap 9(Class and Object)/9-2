# -*- coding: cp1252 -*-

class Player:
	teamcolor = "Red"
	__points = 0
	
	def tellscore(self):
		print("I am",self.teamcolor+", we have",self.__points,"points!")
	def goal(self):
		self.__points += 1
def main():
	player1 = Player()
	player1.teamcolor = "Blue"
	player1.goal()
	player1.tellscore()
	
if __name__ == "__main__":
    main()
